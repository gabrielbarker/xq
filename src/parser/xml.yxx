%skeleton "lalr1.cc"
%require  "3.2"

%code requires{
  namespace yy {
    class Lexer;
  }

  #include "../include/XML.hpp"
}

%locations
%define parse.trace

%parse-param { yy::Lexer& lexer }
%parse-param { XML::Tag** root }

%code{
    #include "../include/parser/xml.yy.h"
    #undef yylex
    #define yylex lexer.yylex
}

%union {
    char* str;
    XML::Tag* node;
    XML::Children* children;
    XML::Attributes* attributes;
    XML::Words* words;
}

%token <str> NAME WORD STRING
%token LANGLE RANGLE SLASH EQ

%type <node> program tag 
%type <children> tags
%type <str> open close
%type <attributes> attributes
%type <words> words


%%

program: tag  { *root = $1; } ;

tag: open attributes RANGLE NAME close { 
    $$ = new XML::Tag(); 
    $$->setName($1); 
    $$->setAttributes($2->map());
    $$->setValue($4);
  }
   | open attributes RANGLE WORD close { 
    $$ = new XML::Tag(); 
    $$->setName($1); 
    $$->setAttributes($2->map());
    $$->setValue($4); 
  }
   | open attributes RANGLE words close { 
    $$ = new XML::Tag(); 
    $$->setName($1); 
    $$->setAttributes($2->map());
    $$->setValue($4->string()); 
  }
   | open attributes RANGLE tags close { 
    $$ = new XML::Tag(); 
    $$->setName($1); 
    $$->setAttributes($2->map());
    $$->setChildren($4->tags()); 
  }
   ;

tags: tags tag { $$ = $1; $1->add($2); }
    | { $$ = new XML::Children(); }
    ;

open: LANGLE NAME { $$ = $2; };

attributes: attributes NAME EQ STRING { $$ = $1; $$->set($2, $4); }
          | { $$ = new XML::Attributes(); }
          ;

words: words WORD { $$ = $1; $$->add($2); }
     | WORD WORD { $$ = new XML::Words(); $$->add($1); $$->add($2); }
     ;

close: LANGLE SLASH NAME RANGLE { $$ = $3; };

%%

void yy::parser::error(const location_type& loc, const std::string& msg)
{
  std::cout << "error message" << std::endl;
  std::cout << msg << std::endl;
}